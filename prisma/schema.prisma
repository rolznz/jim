generator client {
  provider = "prisma-client-js"
  binaryTargets = ["debian-openssl-3.0.x", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ConnectionSecret {
  id String @id
  pubkey String @unique
  lightningAddress String @unique
}